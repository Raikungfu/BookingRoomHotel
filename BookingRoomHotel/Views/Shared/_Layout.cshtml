<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingRoomHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingRoomHotel.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li id="showLoginStaff" class="nav-item invisible">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Staff</a>
                        </li>
                    </ul>
                </div>
                <div id="showLogout" class="d-flex invisible">
                    <h5 class="me-2 m-auto fs-7 h-font" id="showName"></h5>
                    <div>
                        <a class="btn btn-outline-dark shadow-none me-lg-2 me-3" onclick="logout()">Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid float-right">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script>
        function checkRole() {
            return localStorage.getItem("Role") !== null;
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/StateCode.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
